<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lableCoffee"
            android:background="#ff993300"
            android:text="What type of coffee?"
            android:textStyle="bold"
            android:textColor="#fff"
            ></TextView>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio"
            android:layout_below="@+id/lableCoffee"

            >
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:text="Decaf"

                ></RadioButton>
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:text="Decaf"

                ></RadioButton>
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:text="Decaf"

                ></RadioButton>

        </RadioGroup>

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lableCoffee1"
            android:background="#ff993300"
            android:text="What else in your coffee ?"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/radio"
            ></TextView>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cream"
            android:textStyle="bold"
            android:layout_below="@+id/lableCoffee1"
            />
        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textStyle="bold"
            android:layout_below="@+id/checkBox1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox2"
            android:text="Play"
            ></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>